<?php
function elms_help_help($path) {
  switch ($path) {
    case 'admin':
      return theme('advanced_help_topic', 'elms_help', 'Drupal-Administration');
    case 'admin/elms':
      return theme('advanced_help_topic', 'elms_help', 'ELMS-Settings');
    case 'node/%/edit':
      return theme('advanced_help_topic', 'elms_help', 'Content-Management');
    case 'node/%/features':
      return theme('advanced_help_topic', 'elms_help', 'ID-Toolkit');
    case 'node/%/og_stats':
      return theme('advanced_help_topic', 'elms_help', 'Version-Status');
    case 'node/%/parent_status':
      return theme('advanced_help_topic', 'elms_help', 'Course-Status');
    case 'node/%/theme':
      return theme('advanced_help_topic', 'elms_help', 'Changing-Theme');
    case 'node/add/site':
      return theme('advanced_help_topic', 'elms_help', 'Creating-Sandboxes');
    case 'node/add/site/%':
      return theme('advanced_help_topic', 'elms_help', 'Adding-Versions');
    case 'outline_designer/%':
      return theme('advanced_help_topic', 'elms_help', 'Outline-Designer');
    case 'system_stats':
      return theme('advanced_help_topic', 'elms_help', 'System-Status');
  }
}

function elms_help_step_form(&$element, $form_id, $callback) {
    foreach (element_children($element) as $child) {
      elms_help_step_form($element[$child], $form_id . ':' . $child, $callback);
    }
    $callback($element, $form_id);
}

function elms_help_form_alter(&$form, $form_state, $form_id) {
  elms_help_step_form($form, $form_id, 'elms_help_help_link');
  $form['#description'] = isset($form['#description']) ? elms_help_get_from_key('form', $form_id) . ' ' . $form['#description'] : elms_help_get_from_key('form', $form_id);
}

function elms_help_get_from_key($key) {
  static $helpkeys = array(
    'folder_node_form:title' => array('module' => 'elms_help', 'file' => 'Folder'),
    'link_node_form:title' => array('module' => 'elms_help', 'file' => 'Link'),
    'page_node_form:body_field:body' => array('module' => 'elms_help', 'file' => 'Text-Editor'),
    'page_node_form:title' => array('module' => 'elms_help', 'file' => 'Page'),
    'parent_node_form:field_parent_name:0' => array('module' => 'elms_help', 'file' => 'Creating-Courses'),
    'poll_node_form:title' => array('module' => 'elms_help', 'file' => 'Polls'),
    'referenced_page_node_form:title' => array('module' => 'elms_help', 'file' => 'Reference-Page'),
    'site_node_form:title' => array('module' => 'elms_help', 'file' => 'Adding-Versions'),
    'spaces_features_form:spaces_features:elms_content' => array('module' => 'elms_help', 'file' => 'Content'),
    'spaces_features_form:spaces_features:elms_id_best_practices' => array('module' => 'elms_help', 'file' => 'ID-Best-Practices'),
    'spaces_features_form:spaces_features:elms_places' => array('module' => 'elms_help', 'file' => 'Places'),
    'spaces_features_form:spaces_features:elms_polls' => array('module' => 'elms_help', 'file' => 'Polls'),
    'spaces_features_form:spaces_features:elms_reference_links' => array('module' => 'elms_help', 'file' => 'Reference-Links'),
    'spaces_features_form:spaces_features:elms_terms' => array('module' => 'elms_help', 'file' => 'Terms'),
    'spaces_features_form:spaces_features:elms_timeline' => array('module' => 'elms_help', 'file' => 'Timelines'),
  );
  return isset($helpkeys[$key]) ? $helpkeys[$key] : FALSE;
}

function elms_help_help_link(&$element, $form_id) {
  if (isset($element['#type']) && !in_array($element['#type'], array('button', 'image_button', 'submit', 'markup', 'token', 'hidden', 'form', 'value', 'weight'))) {
    if ($result = elms_help_get_from_key($form_id)) {
      $link = theme('advanced_help_topic', $result['module'], $result['file']);
      if ($element['#type'] == 'fieldset') {
        drupal_add_css(drupal_get_path('module', 'elms_help') . '/elms_help.css');
        $link = preg_replace('/class="(.+?)"/', 'class="\1 elms_help-nofloat"', $link);
      }
      $element['#description'] = isset($element['#description']) ? $link . ' ' . $element['#description'] : $link;
    }
  }
}

